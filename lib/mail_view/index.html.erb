<h1 style="padding: 10px; text-align: center; background: dimgrey; color: #ffffff; font-family: sans-serif; margin: -10px -10px 0 -10px">
  Lista de emails
</h1>
<div style="width: 50%; margin: auto; font-family: sans-serif;">
  <% links.each_pair do |group, links| %>
    <h3 style="background-color: #A3A3A3; border-radius: 5px 5px 0 0; padding: 10px; margin: 5px 0 0 0; border: 1px solid #a3a3a3; text-transform: capitalize; color: white">
      <%= group %>
    </h3>
    <ol style="background-color: #f5faff; border: 1px solid #a3a3a3; border-radius: 0 0 5px 5px; margin: 0 0 5px 0; padding-bottom: 10px">
      <% links.each do |name, link| %>
        <li><a href="<%= link %>.html" target="_blank"><%= name %></a></li>
      <% end %>
    </ol>
  <% end %>
</div>
